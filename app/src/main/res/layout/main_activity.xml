<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <ImageView
          android:id="@+id/main_back"
          android:layout_weight="1"
          android:scaleType="center"
          app:srcCompat="@drawable/ic_baseline_backspace_24"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_clear"
          android:layout_weight="1"
          android:text="C"
          style="@style/MainBtn"
          />

      <TextView
          android:id="@+id/main_memory"
          android:layout_weight="1"
          android:text="M"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_division"
          android:layout_weight="1"
          android:text="/"
          style="@style/MainBtn"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/main_seven"
          android:layout_weight="1"
          android:text="7"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_eight"
          android:layout_weight="1"
          android:text="8"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_nine"
          android:layout_weight="1"
          android:text="9"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_multiplication"
          android:layout_weight="1"
          android:text="Х"
          style="@style/MainBtn"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/main_four"
          android:layout_weight="1"
          android:text="4"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_five"
          android:layout_weight="1"
          android:text="5"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_six"
          android:layout_weight="1"
          android:text="6"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_minus"
          android:layout_weight="1"
          android:text="-"
          style="@style/MainBtn"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/main_one"
          android:layout_weight="1"
          android:text="1"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_two"
          android:layout_weight="1"
          android:text="2"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_three"
          android:layout_weight="1"
          android:text="3"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_plus"
          android:layout_weight="1"
          android:text="+"
          style="@style/MainBtn"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/main_zero"
          android:layout_weight="1"
          android:text="0"
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_point"
          android:layout_weight="1"
          android:text="."
          style="@style/MainBtn"
          />
      <TextView
          android:id="@+id/main_equals"
          android:layout_weight="2"
          android:text="="
          style="@style/MainBtn"
          />
    </LinearLayout>

  </LinearLayout>

  <Button
      android:id="@+id/main_activity_settings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="24dp"
      android:layout_marginEnd="24dp"
      android:text="Настройки"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />
  <TextView
      android:id="@+id/main_second_argument"
      style="@style/Arguments"
      android:text="0"
      app:layout_constraintBottom_toTopOf="@+id/main_result"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="10000"
      />
  <TextView
      android:id="@+id/main_sign"
      style="@style/Arguments"
      app:layout_constraintBottom_toTopOf="@+id/main_second_argument"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="+"
      />
  <TextView
      android:id="@+id/main_first_argument"
      style="@style/Arguments"
      app:layout_constraintBottom_toTopOf="@+id/main_sign"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="1000"
      />
  <TextView
      android:id="@+id/main_result"
      style="@style/Arguments"
      android:layout_width="0dp"
      android:gravity="center_vertical|end"
      android:paddingEnd="20dp"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:text="10000"
      />
</androidx.constraintlayout.widget.ConstraintLayout>